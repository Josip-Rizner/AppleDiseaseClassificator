<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".InfoFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome to the Apple disease Classificator app!"
        android:layout_margin="15dp"
        android:textStyle="bold"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="This app can be used to classify four different diseases (including combinations): frog eye leaf spots, scab, rust and powdery mildew."
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Also, it is possible to start a recommendation system that will help you treat your plantation."
        android:layout_marginBottom="15dp"
        android:layout_marginHorizontal="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Information about supported diseases:"
        android:textStyle="bold"
        android:layout_marginHorizontal="15dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDiseaseInfo"
        android:layout_margin="15dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>